@model Student_management.Models.ScheduleGridViewModel

@{
    ViewData["Title"] = "Quản lý Thời khóa biểu";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>@ViewData["Title"]</h4>
            <a asp-action="Create" class="btn btn-light"><i class="fas fa-plus me-2"></i>Thêm Lịch học mới</a>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3 mb-4 align-items-end">
            <div class="col-md-4">
                <label class="form-label fw-bold">Xem thời khóa biểu cho lớp:</label>
                <select name="lopFilter" asp-for="SelectedLopId" asp-items="Model.LopOptions" class="form-select">
                    <option value="">-- Tất cả các lớp --</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-info w-100"><i class="fas fa-filter me-2"></i>Lọc</button>
            </div>
        </form>

        <h5 class="mb-3">Thời khóa biểu cho: <span class="text-primary">@Model.TenLopHienThi</span></h5>

        <div class="table-responsive">
            <table class="table table-bordered text-center small">
                <thead class="table-light">
                    <tr>
                        <th style="width: 5%;">Tiết</th>
                        @{
                            var daysOfWeek = new List<string> { "Thứ Hai", "Thứ Ba", "Thứ Tư", "Thứ Năm", "Thứ Sáu", "Thứ Bảy" };
                        }
                        @foreach (var day in daysOfWeek)
                        {
                            <th>@day</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @for (int tiet = 1; tiet <= 10; tiet++)
                    {
                        <tr>
                            <td class="fw-bold">@tiet</td>
                            @foreach (var day in daysOfWeek)
                            {
                                <td style="vertical-align: middle;">
                                    @if (Model.TimetableGrid.ContainsKey(day) && Model.TimetableGrid[day].ContainsKey(tiet))
                                    {
                                        var lich = Model.TimetableGrid[day][tiet];
                                        <div class="p-1">
                                            <div class="fw-bold">@lich.MaMonHocNavigation?.TenMonHoc</div>
                                            <div class="text-muted">Lớp: @lich.MaLopNavigation?.TenLop</div>
                                            <div class="text-muted fst-italic">@lich.MaGvNavigation?.HoTen</div>
                                            <div class="text-muted">Phòng: @lich.MaPhongNavigation?.TenPhong</div>
                                            <hr class="my-1" />
                                            <div>
                                                <a asp-action="Edit" asp-route-id="@lich.MaLichHoc" class="btn btn-sm btn-link p-0 text-warning" title="Sửa"><i class="fas fa-edit"></i></a>
                                                <a asp-action="Delete" asp-route-id="@lich.MaLichHoc" class="btn btn-sm btn-link p-0 text-danger" title="Xóa"><i class="fas fa-trash"></i></a>
                                            </div>
                                        </div>
                                    }
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>